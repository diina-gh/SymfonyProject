{% extends 'home.html.twig' %}

{% block title %}
  Gestion des entrees
{% endblock %}

 {% block ol %}
     <li><a href="#">Dashboard</a></li>
     <li><a href="#">Produits</a></li>
     <li class="active">Entrées</li>
{% endblock %}

{% block body %}

 <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Liste des achats</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Date</th>
                                            <th>Quanitité</th>
                                           <th>Produit</th>
                                           <th>Actions</th>
                                        </tr>
                                    </thead>
                                       {% for e in entrees %}
                                         <tr>
                                            <td>{{e.id}}</td>
                                            <td>{{e.dateE|date('d/m/y')}}</td>
                                            <td>{{e.qteE}}</td>
                                            <td>{{e.produit}}</td>
                                            <td>
                                               <a href="#"><i class="menu-icon fa fa-pencil-square-o"></i></a>
                                               <a href="#">-</a>
                                               <a href="#"><i class="menu-icon fa fa-trash-o"></i></a>
                                            </td>                                                                                   
                                         </tr>
                                       {% endfor %}

                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Formulaire des achats</strong>
                            </div>
                            <div class="card-body">
                               {{form(form)}}
                            </div>
                        </div>
                    </div>

                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


{% endblock %}
